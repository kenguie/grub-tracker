<h1>Hello Future Grubber. I greet you!</h1>

<p>Would you like to receive your messages via email or your mobile number? Fill in one (or both below).</p>
<%= form_for @grubber do |f| %>
	<%= f.label :email %>
	<%= f.text_field :email %><br />
	<%= f.label :mobile %>
	<%= f.phone_field :mobile %><br />
	<%= f.label :password %>
	<%= f.password_field :password %><br />
	<%= f.submit %>
<% end %>
