<% if current_grubber %>
	<p>Waddup Grubber? | 
		<%= link_to 'Sign out', logout_path, method: :delete %> |
		<%= link_to 'settings', edit_grubber_path(current_grubber) %>
	</p>
<% else %>
	<%= form_tag '/sessions', method: :post do %>
		<%= label_tag :email, 'Sign in' %>
		<%= text_field_tag :email, nil, placeholder: 'email or mobile' %>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
		<%= submit_tag :login %>
	<% end %>
<% end %>